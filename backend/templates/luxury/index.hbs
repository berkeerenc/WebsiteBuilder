<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{name}} - Premium Luxury Resort</title>
    <meta name="description" content="{{description}}">
    <link rel="stylesheet" href="assets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="logo">
                {{#if logoUrl}}
                <img src="logo.png" alt="{{name}} Logo" class="logo-img">
                {{/if}}
                <h1>{{name}}</h1>
            </div>
            <nav class="nav">
                <a href="#home">Home</a>
                <a href="#suites">Suites</a>
                <a href="#dining">Dining</a>
                <a href="#wellness">Wellness</a>
                <a href="#experiences">Experiences</a>
                <a href="#contact">Contact</a>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-background"></div>
        <div class="container">
            <div class="hero-content">
                <h2>{{name}}</h2>
                <p class="hero-subtitle">A World of Unparalleled Luxury</p>
                <p class="hero-description">{{description}}</p>
                <div class="hero-buttons">
                    <a href="#suites" class="btn btn-primary">Book Your Suite</a>
                    <a href="#contact" class="btn btn-secondary">Enquire Now</a>
                </div>
            </div>
        </div>
        <div class="scroll-indicator">
            <span>Scroll to explore</span>
            <i class="fas fa-chevron-down"></i>
        </div>
    </section>

    <!-- Luxury Features -->
    <section class="luxury-features">
        <div class="container">
            <div class="features-grid">
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-gem"></i>
                    </div>
                    <h3>Premium Suites</h3>
                    <p>Indulge in our meticulously designed luxury suites</p>
                </div>
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3>Michelin Dining</h3>
                    <p>Experience world-class culinary excellence</p>
                </div>
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-spa"></i>
                    </div>
                    <h3>Wellness Sanctuary</h3>
                    <p>Rejuvenate your mind, body, and soul</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about" id="suites">
        <div class="container">
            <div class="about-content">
                <div class="about-text">
                    <h3>Where Luxury Meets Perfection</h3>
                    <p>{{description}}</p>
                    <div class="luxury-stats">
                        {{#if roomCount}}
                        <div class="stat">
                            <span class="stat-number">{{roomCount}}</span>
                            <span class="stat-label">Luxury Suites</span>
                        </div>
                        {{/if}}
                        {{#if rating}}
                        <div class="stat">
                            <span class="stat-number">{{rating}}</span>
                            <span class="stat-label">Star Excellence</span>
                        </div>
                        {{/if}}
                        {{#if priceRange.min}}
                        <div class="stat">
                            <span class="stat-number">${{priceRange.min}}</span>
                            <span class="stat-label">Starting Rate</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <div class="about-image">
                    <div class="image-placeholder">
                        <i class="fas fa-gem"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Amenities Section -->
    {{#if amenities}}
    <section class="amenities" id="wellness">
        <div class="container">
            <h3>Exclusive Amenities</h3>
            <div class="amenities-grid">
                {{#each amenities}}
                <div class="amenity">
                    <i class="fas fa-check"></i>
                    <span>{{this}}</span>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    {{/if}}

    <!-- Contact Section -->
    <section class="contact" id="contact">
        <div class="container">
            <h3>Contact Our Concierge</h3>
            <div class="contact-grid">
                {{#if contact.phone}}
                <div class="contact-item">
                    <i class="fas fa-phone"></i>
                    <div>
                        <h4>Reservations</h4>
                        <p>{{contact.phone}}</p>
                    </div>
                </div>
                {{/if}}
                {{#if contact.email}}
                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <h4>Email</h4>
                        <p>{{contact.email}}</p>
                    </div>
                </div>
                {{/if}}
                {{#if contact.address}}
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <h4>Location</h4>
                        <p>{{contact.address}}</p>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>{{name}}</h4>
                    <p>{{description}}</p>
                </div>
                <div class="footer-section">
                    <h4>Luxury Services</h4>
                    <a href="#suites">Suites</a>
                    <a href="#dining">Dining</a>
                    <a href="#wellness">Wellness</a>
                    <a href="#experiences">Experiences</a>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    {{#if contact.phone}}<p>{{contact.phone}}</p>{{/if}}
                    {{#if contact.email}}<p>{{contact.email}}</p>{{/if}}
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 {{name}}. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="assets/script.js"></script>
</body>
</html> 