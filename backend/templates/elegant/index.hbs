<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{name}} - Luxury Hotel & Resort</title>
    <meta name="description" content="{{description}}">
    <link rel="stylesheet" href="assets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="logo">
                {{#if logoUrl}}
                <img src="logo.png" alt="{{name}} Logo" class="logo-img">
                {{/if}}
                <h1>{{name}}</h1>
            </div>
            <nav class="nav">
                <a href="#home">Home</a>
                <a href="#accommodations">Accommodations</a>
                <a href="#dining">Dining</a>
                <a href="#spa">Spa & Wellness</a>
                <a href="#contact">Contact</a>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="hero-content">
                <h2>Welcome to {{name}}</h2>
                <p class="hero-subtitle">Where Luxury Meets Comfort</p>
                <p class="hero-description">{{description}}</p>
                <div class="hero-buttons">
                    <a href="#accommodations" class="btn btn-primary">Reserve Your Stay</a>
                    <a href="#contact" class="btn btn-secondary">Contact Concierge</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <div class="features-grid">
                <div class="feature">
                    <i class="fas fa-concierge-bell"></i>
                    <h3>24/7 Concierge</h3>
                    <p>Personalized service at your fingertips</p>
                </div>
                <div class="feature">
                    <i class="fas fa-utensils"></i>
                    <h3>Fine Dining</h3>
                    <p>World-class culinary experiences</p>
                </div>
                <div class="feature">
                    <i class="fas fa-spa"></i>
                    <h3>Spa & Wellness</h3>
                    <p>Rejuvenate your mind and body</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about" id="accommodations">
        <div class="container">
            <div class="about-content">
                <div class="about-text">
                    <h3>Experience Unparalleled Luxury</h3>
                    <p>{{description}}</p>
                    <div class="stats">
                        {{#if roomCount}}
                        <div class="stat">
                            <span class="stat-number">{{roomCount}}</span>
                            <span class="stat-label">Luxury Rooms</span>
                        </div>
                        {{/if}}
                        {{#if rating}}
                        <div class="stat">
                            <span class="stat-number">{{rating}}</span>
                            <span class="stat-label">Star Rating</span>
                        </div>
                        {{/if}}
                        {{#if priceRange.min}}
                        <div class="stat">
                            <span class="stat-number">${{priceRange.min}}</span>
                            <span class="stat-label">Starting Price</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <div class="about-image">
                    <div class="image-placeholder">
                        <i class="fas fa-crown"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Amenities Section -->
    {{#if amenities}}
    <section class="amenities" id="spa">
        <div class="container">
            <h3>Hotel Amenities</h3>
            <div class="amenities-grid">
                {{#each amenities}}
                <div class="amenity">
                    <i class="fas fa-check-circle"></i>
                    <span>{{this}}</span>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    {{/if}}

    <!-- Contact Section -->
    <section class="contact" id="contact">
        <div class="container">
            <h3>Contact Information</h3>
            <div class="contact-grid">
                {{#if contact.phone}}
                <div class="contact-item">
                    <i class="fas fa-phone-alt"></i>
                    <div>
                        <h4>Reservations</h4>
                        <p>{{contact.phone}}</p>
                    </div>
                </div>
                {{/if}}
                {{#if contact.email}}
                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <h4>Email</h4>
                        <p>{{contact.email}}</p>
                    </div>
                </div>
                {{/if}}
                {{#if contact.address}}
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <h4>Location</h4>
                        <p>{{contact.address}}</p>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>{{name}}</h4>
                    <p>{{description}}</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <a href="#home">Home</a>
                    <a href="#accommodations">Accommodations</a>
                    <a href="#dining">Dining</a>
                    <a href="#spa">Spa & Wellness</a>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    {{#if contact.phone}}<p>{{contact.phone}}</p>{{/if}}
                    {{#if contact.email}}<p>{{contact.email}}</p>{{/if}}
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 {{name}}. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="assets/script.js"></script>
</body>
</html> 